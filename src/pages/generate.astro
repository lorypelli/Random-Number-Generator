---
import Layout from '../layouts/Layout.astro';
import '../styles/globals.css';
import '../styles/randomNumber.css';
const min = parseInt(Astro.url.searchParams.get('min')!);
const max = parseInt(Astro.url.searchParams.get('max')!);
if (isNaN(min) || isNaN(max) || min > max) {
	return Astro.redirect('/?error');
}
---

<Layout>
	<h1>Il numero casuale tra {min} e {max} Ã¨:</h1>
	<h1>{Math.floor(Math.random() * (max - min + 1) + min)}</h1>
	<div id="buttons">
		<a href=`/?min=${min}&max=${max}`><button>Generate Another</button></a>
		<a href="/"><button>Change Intervals</button></a>
	</div>
</Layout>
